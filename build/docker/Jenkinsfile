pipeline {
  agent none
  environment {
        RAILS_ENV = 'production'
  }

  stages {
    stage('Build Docker') {
        agent {
            label 'main'
        }
        steps {
           echo 'Building Docker....'
           sh 'packer build build/docker/build_docker.json'
        }
    }

    stage('Build') {
      agent {
        docker { image 'mijomoore/http-responder:1.0'}
      }
      steps {
        echo 'Building....'
        echo "Settings: Rails_env=${RAILS_ENV} Build Id: ${env.BUILD_ID} on Jenkins URL: ${env.JENKINS_URL}"

      }
    }
    stage('Unit Test') {
      agent {
        docker { image 'mijomoore/http-responder:1.0'}
      }
      steps {
        echo 'Unit Testing....'
      }
    }
    stage('UI Test') {
      agent {
        docker { image 'mijomoore/http-responder:1.0'}
      }
      steps {
        echo 'UI Testing....'
        sh 'ls /etc'
      }
    }
  }
}
