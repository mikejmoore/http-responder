{
  "builders": [
    {
      "type": "docker",
      "image": "ruby:2.4.3-alpine3.7",
      "commit": "true",
      "changes": [
          "ENV RAILS_ENV production",
          "EXPOSE 3000"
        ],
      "run_command": [
          "-d",
          "-i",
          "-t",
          "--name",
          "{{user `ansible_host`}}",
          "{{.Image}}",
          "/bin/sh"
      ]
    }
  ],
  "provisioners": [
    {
       "type": "shell",
       "inline": [
         "apk update",
         "apk upgrade",
         "apk add python",
         "apk add git",
         "apk add build-base",
         "apk add libxml2-dev",
         "apk add libxslt-dev",
         "apk add postgresql-dev",
         "rm -rf /var/cache/apk/*"
       ]
    },
    {
      "type": "ansible",
      "playbook_file": "./ansible-playbooks/http_responder_docker_pb.yaml",
      "extra_arguments": [ "-v", "--extra-vars", "hosts='default'" ],
      "user": "root",
      "host_alias": "default",
      "ansible_env_vars": ["ANSIBLE_HOST_KEY_CHECKING=False",
          "ANSIBLE_SSH_ARGS='-o ForwardAgent=yes -o ControlMaster=auto -o ControlPersist=60s'",
          "ANSIBLE_NOCOLOR=True"]
    },
    {
       "type": "shell",
       "inline": [
         "apk del git",
         "apk del python"
       ]
    }

  ],
  "post-processors": [
    [
       {
          "type": "docker-tag",
          "repository": "mijomoore/http-responder",
          "tag": "1.0"
        }
      ]
    ]
}
